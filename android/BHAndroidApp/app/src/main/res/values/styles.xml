<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#ff4144</item>
        <item name="android:textAppearanceButton">@style/ButtonTextAppearance</item>
        <item name="editTextStyle">@style/CustomEditText</item>

    </style>


    <style name="ButtonTextAppearance" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/button_text_size</item>

    </style>

    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/search_edit_text_size</item>
    </style>

</resources>
